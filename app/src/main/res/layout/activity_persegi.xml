<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_persegi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rahmahnajiyahimtihan.inputdata.persegi">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hitung Luas Persegi"
        android:textSize="30dp"
        android:gravity="center"
        android:background="#B0BEC5"
        android:layout_marginBottom="20dp"
        android:id="@+id/txtjudul"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukan Sisi"
        android:layout_below="@id/txtjudul"
        android:id="@+id/editSisi"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hitung"
        android:id="@+id/hitungPersegi"
        android:layout_below="@+id/editSisi"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hasilPersegi"
        android:text="Hasil"
        android:layout_below="@+id/hitungPersegi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>

