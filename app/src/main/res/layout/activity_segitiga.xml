<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_segitiga"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rahmahnajiyahimtihan.inputdata.Segitiga">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hitung Luas Segitiga"
        android:textSize="30dp"
        android:gravity="center"
        android:background="#B0BEC5"
        android:layout_marginBottom="20dp"
        android:id="@+id/txtjudul4"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukan Tinggi"
        android:layout_below="@id/txtjudul4"
        android:id="@+id/editSisi4"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukan Alas"
        android:layout_below="@id/editSisi4"
        android:id="@+id/editSisi44"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hitung"
        android:id="@+id/hitungSegitiga"
        android:layout_below="@+id/editSisi44"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hasilSegitiga"
        android:text="Hasil"
        android:layout_below="@+id/hitungSegitiga"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
